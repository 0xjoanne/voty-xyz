// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Entry {
  did String
  ts  DateTime

  community String

  subscribers Int

  @@id([did])
}

model Community {
  permalink String
  ts        DateTime
  entry     String

  data Bytes

  @@id([permalink])
  @@index([entry])
}

model Proposal {
  permalink String
  ts        DateTime
  entry     String
  author    String

  community String
  group     Int

  data Bytes

  voters Int

  @@id([permalink])
  @@index([entry, group])
  @@index([community, group])
  @@index([author])
}

model Option {
  permalink String
  ts        DateTime
  author    String

  community String
  group     Int
  proposal  String

  data Bytes

  @@id([permalink])
  @@unique([proposal, author])
  @@index([author])
}

model Vote {
  permalink String
  ts        DateTime
  author    String

  community String
  group     Int
  proposal  String

  data Bytes

  @@id([permalink])
  @@unique([proposal, author])
  @@index([author])
}

model Counting {
  proposal String
  choice   String
  power    Float

  @@id([proposal, choice])
}

model Subscription {
  entry      String
  subscriber String

  ts DateTime

  @@id([entry, subscriber])
}
